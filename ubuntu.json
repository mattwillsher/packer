{
  "variables": {
    "ubuntu_release": "eoan"
  },
  "builders":
  [
    {
      "type": "qemu",
      "name": "ubuntu-{{user `ubuntu_release`}}-{{timestamp}}",
      "vm_name": "packer-{{build_name}}.img",
      "iso_url": "https://cloud-images.ubuntu.com/{{user `ubuntu_release`}}/current/{{user `ubuntu_release`}}-server-cloudimg-amd64.img",
      "iso_checksum_url": "https://cloud-images.ubuntu.com/releases/{{user `ubuntu_release`}}/release/SHA256SUMS",
      "iso_checksum_type": "none",
      "disk_image": true,
      "shutdown_command": "sudo -S shutdown -P now",
      "cpus": 2,
      "memory": 512,
      "format": "qcow2",
      "accelerator": "kvm",
      "http_directory": "http",
      "ssh_username": "ubuntu",
      "ssh_password": "ubuntu",
      "ssh_timeout": "20m",
      "use_default_display": true,
      "headless": true,
      "qemuargs": [
        ["-fda", "packercloud.img"],
        ["-serial", "mon:stdio"]
      ],
      "net_device": "virtio-net",
      "disk_interface": "virtio"
    }
  ],
  "provisioners":
  [
    {
      "type": "shell",
      "scripts": [
        "scripts/updategrub.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": ["vagrant"]
}
